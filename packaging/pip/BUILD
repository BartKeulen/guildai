package(default_visibility = ["//visibility:private"])

genrule(
    name = "pip",
    cmd = "$(location build-package) $(@D)",
    srcs = [
        "LICENSE",
        "README.rst",
        "setup.py",
    ],
    outs = [
        "guildai-0.1.0-py2-none-any.whl",
    ],
    tools = [
        "build-package",
        # Surprisingly, listing a rule like //guild under srcs *does
        # not* fully resolve all of the files generated by the
        # rule. However, listing it under tools *does*.
        "//guild",
    ],
)
